<Window x:Class="WPF_Project.Clock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Project"
        mc:Ignorable="d"
        Title="Clock" Height="450" Width="800">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Analog Clock Display -->
        <Canvas x:Name="AnalogCanvas" Grid.Row="0" Width="400" Height="400" 
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Clock face -->
            <Ellipse Width="300" Height="300" Stroke="Black" StrokeThickness="2" 
                     Fill="LightYellow" Canvas.Left="50" Canvas.Top="50"/>

            <!-- Second hand -->
            <Line x:Name="SecondHand" Stroke="Red" StrokeThickness="1" 
                  X1="62.5" Y1="0" X2="62.5" Y2="125"
                  RenderTransformOrigin="0.504,1.039" HorizontalAlignment="Center" VerticalAlignment="Center" Width="124" Height="125" Canvas.Left="137.5" Canvas.Top="70">
                <Line.RenderTransform>
                    <RotateTransform Angle="{Binding SecondAngle}"/>
                </Line.RenderTransform>
            </Line>

            <!-- Center circle -->
            <Ellipse Width="10" Height="10" Fill="Black" 
                     Canvas.Left="195" Canvas.Top="195"/>
        </Canvas>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10" Height="60">
            <Button Content="Démarrer" Command="{Binding DemarrerCommand}" 
                    Margin="5" Width="100" Height="30"/>
            <Button Content="Arrêter" Command="{Binding ArreterCommand}" 
                    Margin="5" Width="100" Height="30"/>
            <Button Content="Réinitialiser" Command="{Binding ResetCommand}" 
                    Margin="5" Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
