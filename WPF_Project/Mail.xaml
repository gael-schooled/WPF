<Window x:Class="WPF_Project.Mail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Envoyer un e-mail" Height="520" Width="700" ResizeMode="CanResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Paramètres SMTP" FontWeight="Bold" Margin="0,0,0,6"/>
            <UniformGrid Columns="4" Rows="2" Margin="0,0,0,8" >
                <TextBlock VerticalAlignment="Center">Serveur (Host):</TextBlock>
                <TextBox Name="SmtpHostTextBox" Grid.Column="1" MinWidth="180"/>
                <TextBlock VerticalAlignment="Center">Port:</TextBlock>
                <TextBox Name="SmtpPortTextBox" Grid.Column="3" MinWidth="60" Text="25"/>
                <TextBlock VerticalAlignment="Center">Utilisateur (facultatif):</TextBlock>
                <TextBox Name="SmtpUserTextBox" Grid.Column="1"/>
                <TextBlock VerticalAlignment="Center">Mot de passe:</TextBlock>
                <PasswordBox Name="SmtpPasswordBox" Grid.Column="3"/>
                <TextBlock VerticalAlignment="Center">SSL:</TextBlock>
                <CheckBox Name="UseSslCheckBox" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                <TextBlock VerticalAlignment="Center">Expéditeur (From):</TextBlock>
                <TextBox Name="FromTextBox" Grid.Column="3" MinWidth="180"/>
            </UniformGrid>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,6">
                <TextBlock Text="À (To) :" VerticalAlignment="Center" Width="80"/>
                <TextBox Name="ToTextBox" Width="560"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,6">
                <TextBlock Text="Sujet :" VerticalAlignment="Center" Width="80"/>
                <TextBox Name="SubjectTextBox" Width="560"/>
            </StackPanel>

            <StackPanel Grid.Row="2">
                <TextBlock Text="Corps du message :" Margin="0,0,0,4"/>
                <TextBox Name="BodyTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Height="220"/>
            </StackPanel>
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Name="SendButton" Width="120" Height="32" Margin="6,0,0,0" Click="SendButton_Click">Envoyer</Button>
            <Button Width="120" Height="32" Margin="6,0,0,0" Click="CloseButton_Click">Fermer</Button>
        </StackPanel>
    </Grid>
</Window>
