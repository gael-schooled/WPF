<Window x:Class="WPF_Project.ToDo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Project"
        mc:Ignorable="d"
        Title="ToDo" Height="450" Width="800">
    <Window.Resources>
        <!--local:TaskConverter x:Key="TaskConverter"/-->

        <!-- Style pour les tâches -->
        <Style x:Key="TaskItemStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <TextBlock Grid.Row="0" Text="Cahier des charges - Liste des tâches" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Liste des tâches -->
        <ListBox x:Name="TasksListBox" Grid.Row="1" 
                 ItemsSource="{Binding Tasks}"
                 ItemContainerStyle="{StaticResource TaskItemStyle}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Checkbox pour IsDone -->
                        <CheckBox Grid.Column="0" 
                                  IsChecked="{Binding IsDone, Mode=TwoWay}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>

                        <!-- Titre avec formatage conditionnel -->
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDone}" Value="True">
                                            <Setter Property="Foreground" Value="Gray"/>
                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Zone de saisie de nouvelle tâche -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="NewTaskTextBox" Width="300" Height="25"
                     Margin="0,0,10,0" VerticalContentAlignment="Center"
                     KeyDown="NewTaskTextBox_KeyDown"/>
            <Button x:Name="AddTaskButton" Content="Ajouter" 
                    Width="80" Height="25"
                    Click="AddTaskButton_Click"/>
        </StackPanel>

        <!-- Bouton Supprimer -->
        <Button Grid.Row="3" Content="Supprimer la tâche sélectionnée" 
                Height="30" HorizontalAlignment="Left"
                Click="DeleteTaskButton_Click"/>
    </Grid>
</Window>
